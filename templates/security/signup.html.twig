{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4">Sign Up</h1>
    {% for message in app.flashes('error') %}
        <div class="bg-amber-50 text-red-600 p-4 rounded-md mb-4">
            {{ message }}
        </div>
    {% endfor %}
    {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
    <div>
        {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
    </div>
    <div>
        {{ form_label(registrationForm.pseudo, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
    </div>
    <div>
        {{ form_label(registrationForm.password.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(registrationForm.password.first, {'attr': {'class': 'block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
    </div>
    <div>
        {{ form_label(registrationForm.password.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(registrationForm.password.second, {'attr': {'class': 'block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
    </div>
    <div>
        {{ form_widget(registrationForm.submit, {'attr': {'class': 'bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 cursor-pointer'}}) }}
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}

